<div class="d-flex align-items-center">

  <div class="ml-auto posts_button">
    <a class="btn btn-outline-info" href="/posts/new" role="button">投稿するンゴ</a>
  </div>
  <div class="search">
    <p>検索</p>
    <%= form_tag(posts_path, :method => 'get') do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'Search', :name => nil %>
    <% end %>
  </div>
</div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <h1>うちらゎさぃきょぅ</h1>
  <div>
    <% @posts.each do |post| %>   
      <div class="contents">
        <%= post.title %>
        投稿者: <%= post.name %>
        タグ: <%= post.tag %>
        <%= link_to (image_tag post.img.url), "/posts/#{post.id}" %>
      </div>
    <% end %>
	</div>
  <div class="twitter posts_button">
  　<a href="//twitter.com/share" class="twitter-share-button" data-text="平成さいきょうギャル" data-url="gal" data-lang="ja">
      Twitterで友達におしえる
    </a>
  </div>
</table>

